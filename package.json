{
  "name": "learn-electron",
  "version": "4.0.0",
  "description": "Links, resources, and code related to my learning of the electron framework.",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/learn_electron.git"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "npx del-cli app/lib",
    "copy-libs": "mkdirp app/lib && ncp node_modules/photonkit/ app/lib/photonkit/",
    "_preinstall": "npm run clean",
    "postinstall": "npm run copy-libs",
    "start": "electron app/",
    "lint": "eslint .",
    "updates": "npx ncu",
    "release": "npx np"
  },
  "dependencies": {
    "bootstrap": "^5.2.2",
    "electron": "^18.3.15",
    "jquery": "^3.6.1",
    "mkdirp": "^1.0.4",
    "photonkit": "^0.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "commitlint-config-gitmoji": "^2.2.6",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "ncp": "^2.0.0"
  },
  "peerDependencies": {
    "@popperjs/core": "^2.11.6"
  }
}
