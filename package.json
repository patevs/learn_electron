{
  "name": "learn-electron",
  "version": "3.0.0",
  "description": "Links, resources, and code related to my learning of the electron framework.",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/learn_electron.git"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6.8.0"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "npx del-cli app/lib",
    "copy-libs": "mkdirp app/lib && ncp node_modules/photonkit/ app/lib/photonkit/",
    "_preinstall": "npm run clean",
    "postinstall": "npm run copy-libs",
    "start": "electron app/",
    "lint": "eslint .",
    "updates": "npx ncu",
    "release": "np"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "electron": "^14.2.8",
    "jquery": "^3.6.0",
    "mkdirp": "^1.0.4",
    "photonkit": "^0.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "commitlint-config-gitmoji": "^2.2.5",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "ncp": "^2.0.0",
    "np": "^7.6.1"
  },
  "peerDependencies": {
    "@popperjs/core": "^2.10.1"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  }
}
