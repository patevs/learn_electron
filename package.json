{
  "name": "learn-electron",
  "version": "2.3.0",
  "description": "Links, resources, and code related to my learning of the electron framework.",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/learn_electron.git"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6.8.0",
    "git": ">=2.11"
  },
  "scripts": {
    "clean": "npx trash-cli boiler/lib",
    "copy-libs": "mkdirp boiler/lib && ncp node_modules/photonkit/ boiler/lib/photonkit/",
    "preinstall": "npm run clean",
    "postinstall": "npm run copy-libs",
    "start:basic": "cd basic && yarn run start",
    "start:boiler": "electron boiler/",
    "release": "np",
    "lint": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "jquery": "^3.5.1",
    "mkdirp": "^1.0.4",
    "photonkit": "^0.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "commitlint-config-gitmoji": "^1.0.1",
    "electron": "^9.1.2",
    "electron-reloader": "^1.0.1",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "ncp": "^2.0.0",
    "np": "^6.3.2"
  },
  "peerDependencies": {
    "popper.js": "^1.16.1"
  }
}
